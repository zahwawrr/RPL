<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/view1"
        android:gravity="center"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_orange"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="120dp">

        <TextView
            android:gravity="center"
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Abiyyu Habibi"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="32sp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/txt_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="BA 3413 AA"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="24dp"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>

    <com.github.florent37.shapeofview.shapes.CircleView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/pic_register"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon_nopic"
            app:layout_constraintTop_toTopOf="parent" />
    </com.github.florent37.shapeofview.shapes.CircleView>

    <LinearLayout
        android:id="@+id/view3"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_1"/>


    <LinearLayout
        android:id="@+id/view2"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Ubah Profile"
            android:textStyle="bold"
            android:textSize="24sp" />

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#A0A4A8"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view4"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/view3">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_2"/>

        <LinearLayout
            android:layout_marginTop="8sp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Kebijakan Privasi"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#A0A4A8"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view5"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/view4">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_3"/>

        <LinearLayout
            android:layout_marginTop="8sp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Pusat Bantuan"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#A0A4A8"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_marginRight="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="48dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_red"
        android:text="KELUAR"
        android:textColor="#fff"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/view5"/>



</androidx.constraintlayout.widget.ConstraintLayout>
